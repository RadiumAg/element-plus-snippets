        "allowSyntheticDefaultImports":true,
		"sourceMap": true,
		"moduleResolution":"nodenext",
		"noImplicitAny": false,
		"baseUrl": ".",
		"strict": true 
	},
	"include": ["rollup.config.ts","package.json"]
}
